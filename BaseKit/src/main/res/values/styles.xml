<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- toolbar 白底黑字-->
    <style name="Toolbar.Light" parent="@style/ThemeOverlay.AppCompat.ActionBar" />
    <!--  popup  -->
    <style name="PopupBottomStyle">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>
    <!--  dialog  -->
    <style name="NormalDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="InputDialog" parent="CustomDialogTheme">
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
    </style>

    <!-- 分割   -->
    <style name="DividerVertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="DividerVertical.Light">
        <item name="android:background">@color/dividerColorLight</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="DividerHorizontal.Light">
        <item name="android:background">@color/dividerColorLight</item>
    </style>
</resources>